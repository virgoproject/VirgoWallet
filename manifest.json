{
  "manifest_version": 2,
  "name": "Virgo Wallet",
  "version": "0.4",
  "short_name": "Virgo Wallet",
  "description": "Store your VGOs and use Apps built on Virgo",
  "permissions": ["storage","notifications"],

  "browser_action": {
    "default_icon": "ui/images/vgoLogoApp.png",
    "default_popup": "ui/html/popup.html",
    "default_title": "Virgo"
  },

  "icons": {"128": "ui/images/vgoLogoApp.png"},

  "background": {
    "scripts": [
      "background/browser-polyfill.js",
      "background/bundle.js",
      "background/utils/converter.js",
      "background/wallet/baseWallet.js",
      "background/background.js"
    ]
  }
}